@{
    var controller = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stomatološka ordinacija</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="icon" href="~/favicon/favicon.ico" type="image/x-icon">
    <!-- Include moment.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <div class="sidebar">
        <nav class="nav-links">
            <a href="/DailySchedule" class="nav-item @(controller == "DailySchedule" ?  "active" : "")"><i class="fas fa-calendar-day"></i> Dnevni raspored</a>
            <a href="/WeeklySchedule" class="nav-item @(controller == "WeeklySchedule" ?  "active" : "")"><i class="fas fa-calendar-week"></i> Sedmični raspored</a>
            <a href="/MonthlySchedule" class="nav-item @(controller == "MonthlySchedule" ? "active" : "")"><i class="fas fa-calendar-alt"></i> Mjesečni raspored</a>
            <a href="/Patients" class="nav-item @(controller == "Patients" ?  "active" : "")"><i class="fas fa-user"></i> Pacijenti</a>
            <a href="/Billing" class="nav-item @(controller == "Billing" ?  "active" : "")"><i class="fas fa-dollar-sign"></i> Plaćanja</a>
        </nav>
    </div>

    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
