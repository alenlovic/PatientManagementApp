@{
    ViewData["Title"] = "Plaćanja";
}

    <div class="billing-container">
        <div class="button-wrapper">
            <button class="add-billing" onclick="openCreateModal()">Dodaj plaćanje</button>
        </div>
        <h3>@ViewData["Title"]</h3>
        <div class="search-wrapper">
            <label for="searchBox">Pretraga pacijenta:</label>
            <input type="text" id="searchBox" placeholder="Unesite ime pacijenta...">
            <div id="autocomplete-list" class="autocomplete-items"></div>
        </div>
        <table class="billing-table">
            <thead>
                <tr>
                    <th>Pacijent</th>
                    <th>Naziv usluge</th>
                    <th>Cijena usluge</th>
                    <th>Način plaćanja</th>
                    <th>Uplaćeno</th>
                    <th>Datum zadnje uplate</th>
                    <th>Preostali iznos</th>
                    <th>Detalji</th>
                    <th>Uredi/izbriši</th>
                </tr>
            </thead>
            <tbody id="billingList">
            </tbody>
        </table>
        <div class="pagination">
            <button id="prevPage" onclick="prevPage()">Prethodna</button>
            <span id="pageInfo"></span>
            <button id="nextPage" onclick="nextPage()">Sljedeća</button>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="edit-modal">
        <div class="edit-modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h3>Uredi plaćanje</h3>
            <form id="editForm">
                <input type="hidden" id="editBillingId" name="editBillingId">
                <input type="hidden" id="editPatientId" name="editPatientId">
                <label for="editPatientName">Ime pacijenta</label>
                <input type="text" id="editPatientName" name="patientName" required>

                <label for="editPaymentMethod">Način plaćanja</label>
                <input type="text" id="editPaymentMethod" name="paymentMethod" required>

                <label for="editCurrentAmount">Iznos za platiti</label>
                <input type="number" id="editCurrentAmount" name="currentAmount" required>

                <label for="editDateOfLastPayment">Datum zadnjeg plaćanja</label>
                <input type="date" id="editDateOfLastPayment" name="dateOfLastPayment" required>

                <label for="editRemainingAmount">Preostali iznos</label>
                <input type="number" id="editRemainingAmount" name="remainingAmount" required>

                <label for="editBillingNote">Detalji</label>
                <input type="text" id="editBillingNote" name="billingNote" required>

                <!--<label for="editBillingStatus">Status plaćanja</label>
                <input type="text" id="editBillingStatus" name="billingStatus" required>-->

                <button type="submit">Sačuvaj</button>
            </form>
        </div>
    </div>

    <!-- Create Modal -->
    <div id="createModal" class="create-modal">
        <div class="create-modal-content">
            <span class="close" onclick="closeCreateModal()">&times;</span>
            <h3>Dodaj plaćanje</h3>
            <form id="createForm" class="form-grid">
                <div class="form-group">
                    <label for="createPatientName">Ime pacijenta</label>
                    <input type="text" id="createPatientName" name="patientName" required>
                    <div id="autocomplete-list-appointment" class="autocomplete-appointment"></div>
                </div>
                <input type="hidden" id="createPatientId" name="createPatientId">
                <div class="form-group">
                    <label for="createServiceName">Naziv usluge</label>
                    <input type="text" id="createServiceName" name="serviceName" required>
                </div>
                <div class="form-group">
                    <label for="createServiceCost">Cijena usluge</label>
                    <input type="number" id="createServiceCost" name="serviceCost" required>
                </div>
                <div class="form-group">
                    <label for="createPaymentMethod">Način plaćanja</label>
                    <input type="text" id="createPaymentMethod" name="paymentMethod" required>
                </div>
                <div class="form-group">
                    <label for="createPayedAmount">Uplaćeno</label>
                    <input type="number" id="createPayedAmount" name="payedAmount" required>
                </div>
                <div class="form-group">
                    <label for="createDateOfLastPayment">Datum plaćanja</label>
                    <input type="date" id="createDateOfLastPayment" name="dateOfLastPayment" required>
                </div>
                <div class="form-group">
                    <label for="createRemainingAmount">Preostali iznos</label>
                    <input type="number" id="createRemainingAmount" name="remainingAmount" required>
                </div>
                <div class="form-group">
                    <label for="createBillingNote">Detalji</label>
                    <input type="text" id="createBillingNote" name="billingNote" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="submit-btn">Kreiraj</button>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    <script src="~/js/billing.js"></script>
    <script src="~/js/updatebillingpatient.js"></script>
}